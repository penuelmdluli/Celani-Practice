@model IEnumerable<Hospital_Management_System.Models.Appointment>

@{
    ViewBag.Title = "CompletedAppointments";
    Layout = "~/Views/Shared/_PsychologistLayout.cshtml";
}

<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Appointment</li>
        <li class="active">Completed Appointments</li>
    </ol>
</div>

<h2>Completed Appointments</h2>


<table id="table_id" class="table">
    <thead>
        <tr>
            <th>
                Psychologist Name
            </th>
            <th>
                Patient Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentDate)
            </th>



            <th>
                @Html.DisplayNameFor(model => model.Problem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Schedule.Psychologist.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentDate)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Problem)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
               
            </tr>
        }
    </tbody>

</table>


@section scripts {
    <script>
        $(document).ready(function () {
            $("#table_id").dataTable();
        });
    </script>
}
